@model Section?

@{
    ViewData["Title"] = "Delete Section";
}

<div class="text-center">
    <h1 class="display-4">Sections</h1>
</div>

<div>
    <div>
        <span>Do you want to delete this section?</span>
    </div>
    <div>
        <a asp-controller="Section" asp-action="Delete" asp-route-id=@Model.Id class="link-underline-success" style="font-size: 20px; font-weight: bold; text-decoration: none">Yes</a>
        <a asp-controller="Section" asp-action="Get" asp-route-id=@Model.Id class="link-underline-danger" style="font-size: 20px; font-weight: bold; text-decoration: none">No</a>
    </div>
</div>